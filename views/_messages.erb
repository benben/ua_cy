<% @messages.each do |message| %>
  <div id="<%= message.id %>">
    <h2><%= urlconv(message.text) %></h2>
    <p><%= Time.at(message.time).strftime("%d.%m.%Y %H:%M:%S") %> | von <a href="<%=  'http://twitter.com/' + message.user_id%>"><%= message.user_name %></a> via <%= message.via %></p>
    <br /><br />
  </div>
<% end %>
